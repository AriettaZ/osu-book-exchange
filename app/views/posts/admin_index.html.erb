<h1>Posts</h1>
<table id="post_index_table" class="display">
  <thead>
    <tr>
      <th>Post#</th>
      <th>Book</th>
      <th>User</th>
      <th>Post Type</th>
      <th>Course Number</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Payment Method</th>
      <th>Description</th>
      <th>Status</th>
      <th>Creadted At</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to "#{post.book.title}", book_path(post.book.id)%>
        <td><%= post.user.name %></td>
        <td><%= post.post_type.capitalize %></td>
        <td><%= post.course_number %></td>
        <td> $<%= post.price %></td>
        <td><%= post.condition %></td>
        <td><%= post.payment_method.capitalize %></td>
        <td><%= post.description %></td>
        <td><%= post.status.capitalize %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.post_type=="offer" %>
        <td><%= link_to 'Edit', post_edit_offer_path(post) %></td>
        <% else %>
        <td><%= link_to 'Edit', post_edit_request_path(post) %></td>
        <% end %>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
