<% provide(:title, "Create New Message") %>

<h1>Messages#new</h1>
<p>Find me in app/views/messages/new.html.erb</p>

<% flash.each do |message_type, message| %>
  <div><%= message %></div>
<% end %>

<%= form_for @message do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content, size: "60x12" %>
  <%= f.submit "Send" %>
<% end %>
