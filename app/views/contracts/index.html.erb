<p id="notice"><%= notice %></p>

<h1>Contracts</h1>

<table>
  <thead>
    <tr>
      <th>Meeting time</th>
      <th>Meeting address first</th>
      <th>Meeting address second</th>
      <th>Final method</th>
      <th>Final price</th>
      <th>Expiration time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.meeting_time %></td>
        <td><%= contract.meeting_address_first %></td>
        <td><%= contract.meeting_address_second %></td>
        <td><%= contract.final_payment_method %></td>
        <td><%= contract.final_price %></td>
        <td><%= contract.expiration_time %></td>
        <td><%= contract.status %></td>
        <td><%= link_to 'Show', contract %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract) %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

