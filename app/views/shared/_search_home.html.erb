<%= stylesheet_link_tag "search" %>


<%= form_tag(search_path, :method=>"get", :id=>"search-form") do %>

<div class="offer-request-container">
<select name="search_for" class="search-for">
	<option value="Title">Title</option>
	<option value="ISBN">ISBN</option>
</select>
</div>

<div class="offer-request-container">
<select name="offer_request" class="offer-request">
	<option value="both">offer and request</option>
	<option value="offer">offer only</option>
	<option value="request">request only</option>
</select>
</div>

<script>
	$("select").niceSelect();
</script>

<div class="search-query-container">
	<%= search_field_tag(:query, @search_field || "", :class=>"search-query")  %>
</div>
	<%= hidden_field_tag :edition, "all" %>
	<%= hidden_field_tag :condition, "all" %>
	<%= hidden_field_tag :high_price, "" %>
	<%= hidden_field_tag :low_price, "" %>

	<%= link_to "Search", "",:class=>"submit-button", :onclick=>"$('#search-form').submit()" %>
<% end %>