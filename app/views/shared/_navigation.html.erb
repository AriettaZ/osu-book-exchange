<nav class="navbar navbar-expand-lg navbar-light bg-light" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="#">OSU Textbook Exchange</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="nav navbar-nav navbar-right  mr-auto">

      <!-- Links that everybody can see -->
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Home", root_path %></a>
      </li>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Posts", posts_path %></a>
      </li>
      <!-- Links for admin user -->
      <% if current_user.has_roles?(:site_admin) %>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Orders", orders_path %></a>
      </li>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Books", books_path %></a>
      </li>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Contracts", contracts_path %></a>
      </li>
      <%  end %>

      <% if current_user.is_a?(GuestUser) %>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Login", new_user_session_path %></a>
      </li>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Register", new_user_registration_path %></a>
      </li>
      <% else %>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Logout", destroy_user_session_path, method: 'delete' %></a>
      </li>
      <li  class="nav-item">
        <a  class="nav-link"><%= link_to "Dashboard", dashboard_myorder_path %></a>
      </li>
      <% end %>
    </ul>
  </div><!--/navbar-colapse-->
</nav><!--/navbar-->
