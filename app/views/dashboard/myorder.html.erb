<%= stylesheet_link_tag "orders" %>

<h1>My Orders</h1>
<div id="order-btn-container" class="btn-group btn-group-toggle d-flex" data-toggle="buttons">
  <button id="a-order" class="btn btn-default w-100 active" style="padding:10px">Active Orders</button>
  <button id="p-order" class="btn btn-default w-100" style="padding:10px">Problematic Orders</button>
  <button id="cl-order" class="btn btn-default w-100"style="padding:10px">Completed Orders</button>
  <button id="ca-order" class="btn btn-default w-100" style="padding:10px">Canceled Orders</button>
</div>
<br/>
<br/>

<div id="filter-order-list">
  <!-- Show active orders initially. Ajax will fill this with correct order list. -->
  <%=render partial: "ajax_pages/order", locals: {status: "active", list_name: "a-ord-list"}%>
</div>

<script>
$("document").ready(function(){
  // Create the basic call object
  var call_obj = {
    url: "",
    dataType: "html",
    method: "GET",
  }
  // Fill in the url based on button click
  // Active orders
  $("#a-order").click(function(){
    $("#a-order").addClass( "active" )
    $("#order-btn-container button").not("#a-order").removeClass( "active" )
    call_obj.url = "ajax/a_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  // Problematic Orders
  $("#p-order").click(function(){
    $("#p-order").addClass( "active" )
    $("#order-btn-container button").not("#p-order").removeClass( "active" )
    call_obj.url = "ajax/p_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  // Completed Orders
  $("#cl-order").click(function(){
    $("#cl-order").addClass( "active" )
    $("#order-btn-container button").not("#cl-order").removeClass( "active" )
    call_obj.url = "ajax/cl_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  // Canceled Orders
  $("#ca-order").click(function(){
    $("#ca-order").addClass( "active" )
    $("#order-btn-container button").not("#ca-order").removeClass( "active" )
    call_obj.url = "ajax/ca_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
});
</script>
