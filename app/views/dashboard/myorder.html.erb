<%= stylesheet_link_tag "orders" %>

<h1>My Orders</h1>
<div id="order-btn-container" class="btn-group btn-group-toggle" data-toggle="buttons">
  <button id="a-order" class="btn btn-outline-secondary active" style="padding:10px">Active Orders</button>
  <button id="p-order" class="btn btn-outline-secondary" style="padding:10px">Problematic Orders</button>
  <button id="cl-order" class="btn btn-outline-secondary"style="padding:10px">Completed Orders</button>
  <button id="ca-order" class="btn btn-outline-secondary" style="padding:10px">Canceled Orders</button>
</div>
<br/>
<br/>

<div id="filter-order-list">
  <!-- Ajax will fill this with correct order list. -->
</div>

<script>
$("document").ready(function(){
  // Create the basic call object
  var call_obj = {
    url: "",
    dataType: "html",
    method: "GET",
  }
  // Fill in the url based on button click
  // Active orders
  $("#a-order").click(function(){
    call_obj.url = "ajax/a_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  // Problematic Orders
  $("#p-order").click(function(){
    call_obj.url = "ajax/p_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  // Completed Orders
  $("#cl-order").click(function(){
    call_obj.url = "ajax/cl_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  // Canceled Orders
  $("#ca-order").click(function(){
    call_obj.url = "ajax/ca_order"
    // Get data from server and fill in current page
    $.ajax(call_obj).done(function(data){
      $("#filter-order-list").html(data);
    });
  });
  $("#a-order").click()
});
</script>
